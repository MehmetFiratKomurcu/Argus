<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login" android:background="#eaefe8">
    <TextView
            android:text="Username:"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:id="@+id/username_lb" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:editable="false" android:textColor="@android:color/background_dark"/>
    <TextView
            android:text="Password:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/password_lb"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/username_lb" android:layout_marginTop="12dp"
            android:textColor="@android:color/background_dark"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_tb" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/username_tb"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:textColor="@android:color/black"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_tb"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:textColor="@android:color/black"/>
    <Button
            android:text="Login"
            android:layout_width="216dp"
            android:layout_height="54dp"
            android:id="@+id/login_btn" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/password_tb"
            android:background="@android:color/holo_red_light" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:textColor="@android:color/background_light"/>
    <Button
            android:text="Reset password"
            android:layout_width="180dp"
            android:layout_height="49dp"
            android:id="@+id/reset_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:background="@android:color/holo_red_light" android:textColor="@android:color/background_light"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/login_btn"
    />
    <Button
            android:text="Sign Up"
            android:layout_width="180dp"
            android:layout_height="49dp"
            android:id="@+id/signup_btn"
            android:background="@android:color/holo_red_light"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/login_btn" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <Button
            android:text="Location Settings"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:id="@+id/settings_btn"
            android:background="@android:color/holo_red_light"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@android:color/background_light" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/reset_btn"/>

</android.support.constraint.ConstraintLayout>